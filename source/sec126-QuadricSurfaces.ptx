                P += text3d("x", (L_max+1, 0, 0), color='black', fontsize=12) + \
                    text3d("y", (0, L_max+1, 0), color='black', fontsize=12) + \
                    text3d("z", (0, 0, L_max+1), color='black', fontsize=12)

                # --- 1. Surface ---
                if show_surface:
                    # Upper Sheet
                    P += parametric_plot3d(
